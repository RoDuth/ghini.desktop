## vim: ft=mako:fdm=marker
<%!
from bauble.utils import xml_safe
%>\
<%
if value.geojson:
    polygon = multi = None
    multi_poly = []
    json = value.geojson
    if json.get('type') == 'Polygon':
        coords = json.get('coordinates')[0]
        polygon = ' '.join([str(f'{i[0]},{i[1]},0') for i in coords])
    elif json.get('type') == 'MultiPolygon':
        multi = json.get('coordinates')
        for part in multi:
            multi_poly.append(' '.join([str(f'{i[0]},{i[1]},0') for i in part[0]]))
%>\
##
<%def name="poly_block(polygon)">
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
              ${polygon}
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
</%def>\
##
<%def name="multipoly_block(multi_poly)">
      <MultiGeometry>
    % for poly in multi_poly:
        <Polygon>
          <outerBoundaryIs>
            <LinearRing>
              <coordinates>
                ${poly}
              </coordinates>
            </LinearRing>
          </outerBoundaryIs>
        </Polygon>
    % endfor
      </MultiGeometry>
</%def>\
<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2">
  <Document>
    <name>${xml_safe(value)}</name>
    <visibility>1</visibility>
    <Placemark>
      <name>${value.name}</name>
      <description><![CDATA[
        <table>
          <tr>
            <td>WGSRPD Level:</td>
            <td>${['Continent', 'Region', 'Area', 'Unit'][value.tdwg_level - 1]}</td>
          </tr>
          <tr>
            <td>WGSRPD Code:</td>
            <td>${value.tdwg_code}</td>
          </tr>
          % if value.iso_code:
          <tr>
            <td>ISO Code:</td>
            <td>${value.iso_code}</td>
          </tr>
          % endif
        </table>
          ]]>
      </description>
      <visibility>1</visibility>
% if multi:
    ${multipoly_block(multi_poly)}
% else:
    ${poly_block(polygon)}
% endif
    </Placemark>
  </Document>
</kml>
